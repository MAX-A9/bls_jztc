.swiper-banner{position:relative;padding:0 20rpx;margin-top:20rpx}.swiper{height:160rpx;border-radius:20rpx;overflow:hidden}.banner-image{width:100%;height:100%;border-radius:20rpx}.dots{position:absolute;bottom:20rpx;right:30rpx;display:flex;justify-content:flex-end;gap:8rpx}.dot{width:12rpx;height:12rpx;background-color:rgba(255,255,255,.5);border-radius:50%;transition:all .3s}.dot.active{width:24rpx;background-color:#fff;border-radius:6rpx}
