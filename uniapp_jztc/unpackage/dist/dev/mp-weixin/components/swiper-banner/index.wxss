
.swiper-banner {
		position: relative;
		padding: 0 20rpx;
		margin-top: 20rpx;
}
.swiper {
		height: 160rpx;
		border-radius: 20rpx;
		overflow: hidden;
}
.banner-image {
		width: 100%;
		height: 100%;
		border-radius: 20rpx;
}
	
	/* 指示点样式 */
.dots {
		position: absolute;
		bottom: 20rpx;
		right: 30rpx;
		display: flex;
		justify-content: flex-end;
		gap: 8rpx;
}
.dot {
		width: 12rpx;
		height: 12rpx;
		background-color: rgba(255, 255, 255, 0.5);
		border-radius: 50%;
		transition: all 0.3s;
}
.dot.active {
		width: 24rpx;
		background-color: #ffffff;
		border-radius: 6rpx;
}
